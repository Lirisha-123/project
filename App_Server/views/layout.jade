doctype html
html
  head
    title= title
    link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      .container
        a.navbar-brand(href='/') Mentor Bridge
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ml-auto
            if user
              li.nav-item
                a.nav-link(href='/dashboard') Dashboard
              li.nav-item
                a.nav-link(href='/profile') Profile
              if user.role === 'admin'
                li.nav-item
                  a.nav-link(href='/admin') Admin
              li.nav-item
                a.nav-link(href='/logout') Logout
            else
              li.nav-item
                a.nav-link(href='/login') Login
              li.nav-item
                a.nav-link(href='/register') Register

    .container.mt-4
      if success_msg
        .alert.alert-success= success_msg
      if error_msg
        .alert.alert-danger= error_msg
      if error
        .alert.alert-danger= error

      block content

    script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js')
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js')
